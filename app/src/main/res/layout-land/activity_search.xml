<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="56dp"
    tools:context="edu.orangecoastcollege.cs273.kfrederick5tmorrissey1ischenck.occstudentsuccesscenter.SearchActivity"
    android:orientation="vertical"
    android:weightSum="7">


    <TextView
        android:text="@string/student_success_center_hours"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:layout_weight="3">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:entries="@string/subject_drop_down_text"
            android:id="@+id/subjectSpinner"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:scrollbarSize="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:entries="@string/class_drop_down_text"
            android:id="@+id/classSpinner"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:entries="@string/day_drop_down_text"
            android:id="@+id/daySpinner"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:layout_weight="1.5">


        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/hourSpinner"
            android:entries="@string/hour_drop_down_text"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:entries="@string/default_minutes"
            android:id="@+id/minuteSpinner"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:layout_weight="1.5">

        <Button
            android:text="@string/search_button_text"
            android:id="@+id/searchButton"
            android:layout_weight="1"
            android:onClick="search"
            android:background="@drawable/occ_button_style"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_marginRight="25dp"
            android:elevation="16dp"
            android:layout_height="40dp"/>

        <Button
            android:text="@string/clear_button_text"
            android:id="@+id/clearButton"
            android:layout_weight="1"
            android:onClick="clearSearch"
            android:background="@drawable/occ_button_style"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:elevation="16dp"
            android:layout_height="40dp"/>

    </LinearLayout>



</LinearLayout>
