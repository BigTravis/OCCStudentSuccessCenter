<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/occPaleBlue</item>
        <item name="colorPrimaryDark">@color/occDarkBlue</item>
        <item name="colorAccent">@color/occDarkOrange</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorPrimary">@color/occDarkBlue</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
