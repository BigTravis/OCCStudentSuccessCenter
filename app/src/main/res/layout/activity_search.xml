<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.kfrederick5tmorrissey1ischenck.occstudentsuccesscenter.SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:text="@string/student_success_center_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginBottom="26dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="2">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@string/subject_drop_down_text"
                android:id="@+id/subjectSpinner"
                android:layout_marginRight="50dp"
                android:clickable="true"
                android:layout_weight="1"/>


            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@string/class_drop_down_text"
                android:id="@+id/classSpinner"
                android:clickable="true"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@string/day_drop_down_text"
                android:id="@+id/daySpinner"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/hourSpinner"
                android:entries="@string/hour_drop_down_text"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@string/default_minutes"
                android:id="@+id/minuteSpinner"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.5"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Button
                android:text="@string/search_button_text"
                android:id="@+id/searchButton"
                android:layout_weight="1"
                android:onClick="search"
                android:background="@drawable/occ_button_style"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_marginRight="25dp"
                android:elevation="16dp"
                android:layout_height="40dp"/>

            <Button
                android:text="@string/clear_button_text"
                android:id="@+id/clearButton"
                android:layout_weight="1"
                android:onClick="clearSearch"
                android:background="@drawable/occ_button_style"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:elevation="16dp"
                android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
