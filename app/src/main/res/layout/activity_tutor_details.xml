<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutor_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.kfrederick5tmorrissey1ischenck.occstudentsuccesscenter.TutorDetailsActivity"
    android:orientation="vertical">

    <TextView
        android:text="Tutor Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tutorNameTextView"
        android:textSize="24sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/tutor_hours_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <TextView
            android:text="Tutor Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorHoursTextView"
            android:layout_weight="1"
            android:layout_margin="5dp" />
    </LinearLayout>

    <TextView
        android:text="@string/tutor_courses_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Tutor Classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tutorClassTextView"
        android:padding="5dp" />

    <Button
        android:text="@string/return_to_search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="returnToSearch" />
</LinearLayout>
