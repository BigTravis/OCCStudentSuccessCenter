<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.kfrederick5tmorrissey1ischenck.occstudentsuccesscenter.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Tutor Search"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/tutor_search"
                android:layout_weight="1"
                android:onClick="onClickTutor"/>
            <Button
                android:text="Study Group"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/study_group"
                android:layout_weight="1"
                android:onClick="onClickStudy"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="FAQ"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/faq"
                android:layout_weight="1"
                android:onClick="onClickFAQ"/>
            <Button
                android:text="Contact"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/contact"
                android:layout_weight="1"
                android:onClick="onClickContact"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Location"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/location"
                android:layout_weight="1"
                android:onClick="onClickLocation"/>
            <Button
                android:text="Resources"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/resources"
                android:layout_weight="1"
                android:onClick="onClickResources"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/temp"
                android:layout_weight="1" />
            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/hold"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
